@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <div class="user-menu">
        <div class="user-info">
            <i class="fas fa-user-circle"></i>
            <span>@User.Identity?.Name</span>
        </div>
        <div class="user-dropdown">
            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post">
                <button type="submit" class="logout-btn">
                    <i class="fas fa-sign-out-alt"></i> Sair
                </button>
            </form>
        </div>
    </div>
}
else
{
    <div class="auth-buttons">
        <a class="btn-outline" asp-area="Identity" asp-page="/Account/Register">
            <i class="fas fa-user-plus"></i> Registrar
        </a>
        <a class="btn-primary" asp-area="Identity" asp-page="/Account/Login">
            <i class="fas fa-sign-in-alt"></i> Entrar
        </a>
    </div>
}