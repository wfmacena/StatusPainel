<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StatusPainel</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="nav-container">
                <a class="nav-brand" asp-area="" asp-page="/Index">
                    <i class="fas fa-gamepad"></i> StatusPainel
                </a>
                <div class="nav-links">
                    <a class="nav-link" asp-area="" asp-page="/Index">
                        <i class="fas fa-home"></i> Home
                    </a>
                    
                    @if (User.Identity?.IsAuthenticated == true && User.IsInRole("Admin"))
                    {
                        <a class="nav-link" asp-area="" asp-page="/Admin">
                            <i class="fas fa-cog"></i> Admin
                        </a>
                    }
                    
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    
    <main>
        @RenderBody()
    </main>

    <footer>
        <div class="footer-container">
            &copy; 2026 - StatusPainel - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>