@page
@model StatusPainel.Areas.Identity.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Entrar";
}

<div class="auth-wrapper">
    <div class="auth-container">
        <div class="auth-header">
            <div class="auth-logo">
                <i class="fas fa-gamepad"></i>
                <h2>StatusPainel</h2>
            </div>
            <h1 class="auth-title">Bem-vindo de volta! 👋</h1>
            <p class="auth-subtitle">Faça login para acessar o painel</p>
        </div>

        <div class="auth-card">
            <form method="post" novalidate>
                <input type="hidden" asp-for="ReturnUrl" />
                <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

                <div class="form-group">
                    <label asp-for="Input.Email">
                        <i class="fas fa-envelope"></i> E-mail
                    </label>
                    <div class="input-wrapper">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="seu@email.com" />
                        <span asp-validation-for="Input.Email" class="field-validation-error"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Input.Password">
                        <i class="fas fa-lock"></i> Senha
                    </label>
                    <div class="input-wrapper">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" placeholder="••••••••" />
                        <span asp-validation-for="Input.Password" class="field-validation-error"></span>
                    </div>
                </div>

                <div class="form-group checkbox-group">
                    <label class="checkbox-label">
                        <input asp-for="Input.RememberMe" type="checkbox" />
                        <span class="checkbox-custom"></span>
                        <span class="checkbox-text">Lembrar-me</span>
                    </label>
                </div>

                <button type="submit" class="auth-button">
                    <span>Entrar</span>
                    <i class="fas fa-arrow-right"></i>
                </button>
            </form>
        </div>

        <div class="auth-footer">
            <p>Não tem uma conta?</p>
            <a asp-page="./Register" class="auth-link">
                Criar nova conta
                <i class="fas fa-arrow-right"></i>
            </a>
        </div>
    </div>

    <div class="auth-decoration">
        <div class="decoration-content">
            <i class="fas fa-gamepad"></i>
            <i class="fas fa-cog"></i>
            <i class="fas fa-chart-line"></i>
            <i class="fas fa-users"></i>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}